.sidebar.sidebar-lg.scroller
	.p-2.p-lg-4
		.d-flex.justify-content-between.align-items-center
			h3 Filter Products
			button.btn.btn-dark.sidebar-close( data-multi-switch!={ targets: '.sidebar' } ): span.fa-times
		hr
		.row.row-15.align-items-end
			.col-12
				.input-group.form-group
					.input-group-prepend
						label.input-group-text( for='basic-addon11' )
							span.fa-tag
					input#basic-addon11.form-control( type='text', placeholder='Product SKU#' )
			.col-12
				.row.row-10
					.col-12
						p Price Range($)
					.col-6
						.input-group
							.input-group-prepend
								span.input-group-text
									span.fa-usd
							input.form-control( type='number', value='0' )
					.col-6
						.input-group
							.input-group-prepend
								span.input-group-text
									span.fa-usd
							input.form-control( type='number', value='1000' )
			.col-12
				.row.row-10
					.col-12
						p Sales Date
					.col-12
						.input-group
							.input-group-prepend
								span.input-group-text
									span.fa-calendar
							input.form-control( type='text', name='datetime', data-datetimepicker!={ widgetPositioning: { horizontal: 'right' } } )
					.col-12
						.input-group
							.input-group-prepend
								span.input-group-text
									span.fa-calendar
							input.form-control#debug-target( type='text', name='datetime', data-datetimepicker!={ widgetPositioning: { horizontal: 'right' } } )
			.col-12
				p Search Categories
				select.form-control.mt-2
					option Filter by Categories
					option 2
					option 3
					option 4
					option 5
			.col-12
				p Search Customers
				select.form-control.mt-2
					option Filter by Vendor
					option 2
					option 3
					option 4
					option 5
			.col-12
				hr
				.row.align-items-center
					.col.flex-grow-0
						button.btn.btn-dark( type='submit' ) Search
					.col
						+checkbox Save Search
